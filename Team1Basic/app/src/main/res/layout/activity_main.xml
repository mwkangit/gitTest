<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:contentDescription="@string/main_title"
        android:gravity="center"
        android:text="@string/main_title"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Question_btn"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="168dp"
        android:contentDescription="@string/main_question"
        android:text="@string/main_question"
        android:textSize="50sp"
        app:cornerRadius="1000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Suggestion_btn"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="170dp"
        android:contentDescription="@string/main_suggestion"
        android:text="@string/main_suggestion"
        android:textSize="30sp"
        app:cornerRadius="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Question_btn"
        app:layout_constraintStart_toStartOf="@+id/Question_btn"
        app:layout_constraintTop_toBottomOf="@+id/Question_btn" />

    <ImageButton
        android:id="@+id/MyPage_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/cute"
        android:contentDescription="@string/main_mypage"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:srcCompat="@drawable/cute" />

    <ImageButton
        android:id="@+id/Menu_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/menu"
        android:contentDescription="@string/main_menu"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>